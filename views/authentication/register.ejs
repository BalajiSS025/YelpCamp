<% layout('layouts/boilerplate') %> 

<div class="mt-5">
    <h1 class="col-md-6 offset-md-3">
      Register
    </h1>
    <form action="/Register" class="min-vh-100 needs-validation" method="POST" novalidate>
    <div class="row">
    <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
      <label for="username" class="form-label autofocus">Username</label>
      <input type="text" class="form-control" id="username" name="username" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" class="form-control" id="email" name="email" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
  
  <div class="col-3 offset-md-3 mb-3">
    <button class="btn btn-success">Register</button>
  </div>
  
  </div>
  </form>
  </div>

