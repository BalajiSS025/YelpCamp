<% layout('layouts/boilerplate') %> 

        <div class="mt-5">
            <h1 class="col-md-6 offset-4">
              Edit Campground
            </h1>
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" class="min-vh-100 needs-validation" method="POST" novalidate enctype="multipart/form-data">
            <div class="row">
            <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name="title" value="<%= camp.title %>" required>
            </div>
            <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" class="form-control" id="location" name="location" value="<%= camp.location %>" required>
            </div>
            <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
              <label for="price">Price</label>
            <div class="input-group mb-3">
              <span class="input-group-text">$</span>
              <input type="text" class="form-control" id="price" name="price"  min="0" value="<%= camp.price %>" required>
              <span class="input-group-text">.00</span>
            </div>
          </div>
            <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
            <label for="basic-url" class="form-label">Add image(s)</label>
            <div class="input-group mb-3">
              <!-- <input type="text" class="form-control" id="basic-url" name="image" required placeholder="https://example.com/users/" value="<%= camp.image %>"> -->
            <input type="file" name="image" id="basic-url" multiple>
            </div>
          </div>
            <div class="form-group mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" required rows="3" name="description" ><%= camp.description %> </textarea>
            </div>

            <div class="mb-3 col-md-6 col-sm-8 offset-sm-2 offset-md-3">
              <div class="row">
              <% camp.image.forEach(function(img,i){ %>  
                <div class="col-md-6">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="deleteImage[]" value="<%=img.filename%>" id="image-<%=i%> ">
                  <label class="form-check-label" for="image-<%=i%>">
                    Delete
                  </label>
             <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail">
          </div>
        </div>
              <% }) %> 
            </div>
          
          <div class="col-3 offset-md-3 mb-3">
            <button class="btn btn-info">Update</button>
          </div>
          
          </div>
          </form>
          </div>