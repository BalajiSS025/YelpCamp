 <div class="mt-2"> 
    <% for(let c of camps ){ %>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <% if(c.image.length){%>
            <img src="<%= c.image[0].path %> " class="img-fluid" alt=""> 
            <%}else{%>
              <img src="https://res.cloudinary.com/dd60ziw3i/image/upload/v1661397113/YelpCamp/gkw1jet1ljkwrlkv0rn5.jpg" class="img-fluid" alt=""> 
           <% }%>
          </div>
          <div class="card-body col-md-8">
            <h5 class="card-title"><%= c.title %></h5>
            <p class="card-text">
              <%= c.description %> 
            </p>
            <p class="text-muted">
              <%= c.location %> 
            </p>
            <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">View <%= c.title %> </a>
          </div>
        </div>
      </div>
